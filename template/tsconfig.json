{
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "pages/*": ["src/pages/*"],
      "src/*": ["src/*"]
    },
    "skipLibCheck": true,
    "noEmit": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "lib": ["es6", "es2019.array", "dom"],
    "rootDir": "src",
    "module": "esnext",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true
  },
  "include": ["./src/**/*", "./custom.d.ts"],
  "exclude": ["node_modules"]
}
